<body>
    <section class="section">
        <div class="container">
            <div class="columns">
                <aside class="column box is-2 is-justify-content-space-between is-align-self-center" id="sidebar">
                    <div>
                        <form action="" id="new-convo-form" class="is-flex is-align-items-center">
                            <input type="text" id="convo-input" placeholder="Conversation Name">
                            <button type="submit" class="button is-small is-success fas fa-plus m-1"
                                id="new-convo-btn"></button>
                        </form>

                        <div id="your-chats-div">
                            <h3 class="convo-h m-2">Your Chats</h3>
                            <ul id="your-chats-ul">

                            </ul>
                        </div>
                        <div id="other-chats-div">
                            <h3 class="convo-h m-2">Other Chats</h3>
                            <ul id="other-chats-ul">

                            </ul>

                        </div>
                    </div>
                    <div>
                        <button class="logout-btn button is-link is-outlined p-2" id="logout-btn">Logout</button>
                    </div>
                </aside>

                <div class="container column is-5 box  m-auto has-background-white p-4" id="main-container">
                    <div class="column is-centered is-align-items-center" id="chat-page-logo">
                        <div class="column is-half is-align-items-center">
                            <img src="{{imageUrl}}" alt="logo"
                                class="is-justify-content-center is-align-content-center">
                        </div>
                    </div>
                    <div class="chat-messages" id="chat-messages">

                        <div class="p-3 box" id="conversation-name-box">
                            <h3 id="conversation-name-heading"></h3>
                            <div class="buttons">
                                <form action="" id="add-user-form" class="is-flex is-align-items-center">
                                    <input type="text" id="username-input" placeholder="Add user">
                                    <button type="submit" class="button is-success fas fa-user-plus m-1"
                                        id="add-user-btn"></button>
                                </form>
                                <button class=" button is-danger fas fa-trash-alt m-1" id="delete-conv-btn"></button>
                            </div>
                        </div>

                        <div class="chat-messages" id="chat-container">
                            <!-- Messages will appear here -->
                            {{> chat}}
                        </div>
                        <div class="container box" id="chatBox">
                            <form id="chat-form">
                                <input id="chat-input" type="text" placeholder="Type a message..." name="message" required>
                                <button class="button is-success is-link p-1" id="sendButton" type="submit">SEND</button>
                            </form>
                        </div>
                        <script src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/4.1.2/socket.io.js"></script>
                        <script src="https://cdn.jsdelivr.net/npm/dayjs@1.10.7"></script>
                        <script src="./js/sidebar.js"></script>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>