 <body class="container box has-background-white p-5 has-text-centered mt-6">
    <section class="is-justify-content-center">
        <img id="main-page-logo" src="{{imageUrl}}" alt="CRUD-Talker Logo">
        <h1 id="mainf-page-heading"></h1>
    </section>
    <p id="signup-warning" class="has-text-danger"></p>
    <form class="is-flex-direction-column column is-half container" id="signup-form">
        <div class="mb-4 p-2 container box">
            <input class="input is-link" type="text" placeholder="Username" name="username" id="signup-username" required>
            <input class="input is-link" type="text" placeholder="Name" name="name" id="signup-name" required>
            <input class="input is-link" type="email" placeholder="Email" name="email" id="signup-email" required>
            <input class="input is-link" type="password" placeholder="Password" name="password" id="signup-pword1" required>
            <input class="input is-link" type="password" placeholder="Confirm Password" name="confirm_password" id="signup-pword2" required>
        </div>
        <button class="button is-link is-outlined p-2" type="submit">SIGN UP</button>
    </form>
    
    <script type="module" src="/js/signup.js"></script>
    
</body>


