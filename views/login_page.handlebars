<div class="container box has-background-white p-5 has-text-centered mt-6">
    <section class="is-justify-content-center">
        <img id="main-page-logo" src="{{imageUrl}}" alt="CRUD-Talker Logo">
        <h1 id="mainf-page-heading"></h1>
    </section>
    <p id="login-warning" class="has-text-danger"></p>
    <form class="is-flex-direction-column column is-half container" id="login-form">
        <div class="mb-4 p-2 container box">
            <input class="input is-link" type="text" placeholder="Username" name="username" id="login-username" required>
            <input class="input is-link" type="password" placeholder="Password" name="password" id="login-password" required>
        </div>
       <button class="button is-link is-outlined p-2" type="submit">LOGIN</button>
    </form>
</div>

<script type="module" src="/js/login.js"></script>

